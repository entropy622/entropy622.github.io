        <guid>https://entropy622.github.io/deepseek/</guid>
        <description>&lt;style&gt;
#deepseek-chat-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    background-color: #fafafa;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 70vh;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    font-family: &#39;Inter&#39;, -apple-system, BlinkMacSystemFont, sans-serif;
}

#deepseek-chat-container .chat-box {
    flex: 1;
    padding: 20px;
    overflow-y: auto;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    gap: 16px;
}

#deepseek-chat-container .input-area {
    display: flex;
    padding: 12px 16px;
    background-color: #fff;
    border-top: 1px solid #e5e7eb;
    gap: 8px;
}

#deepseek-chat-container .model-selector {
    flex: 0 0 180px;
    padding: 10px 12px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    background-color: #f9fafb;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s;
}

#deepseek-chat-container .model-selector:focus {
    border-color: #3b82f6;
}

#deepseek-chat-container .user-input {
    flex: 1;
    padding: 10px 16px;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    font-size: 15px;
    outline: none;
    transition: border-color 0.2s;
}

#deepseek-chat-container .user-input:focus {
    border-color: #3b82f6;
}

#deepseek-chat-container .send-button {
    padding: 10px 20px;
    border: none;
    background-color: #3b82f6;
    color: white;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 500;
    transition: background-color 0.2s;
}

#deepseek-chat-container .send-button:hover {
    background-color: #2563eb;
}

#deepseek-chat-container .message {
    padding: 12px 16px;
    border-radius: 8px;
    max-width: 85%;
    line-height: 1.5;
    font-size: 15px;
    animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
}

#deepseek-chat-container .user-message {
    background-color: #eff6ff;
    color: #1e40af;
    align-self: flex-end;
    border-bottom-right-radius: 2px;
}

#deepseek-chat-container .assistant-message {
    background-color: #f9fafb;
    color: #111827;
    align-self: flex-start;
    border-bottom-left-radius: 2px;
}

#deepseek-chat-container .typing-indicator {
    display: inline-block;
    padding: 12px 16px;
    background-color: #f9fafb;
    border-radius: 8px;
    align-self: flex-start;
    margin-bottom: 16px;
}

#deepseek-chat-container .typing-dot {
    display: inline-block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: #9ca3af;
    margin-right: 4px;
    animation: typingAnimation 1.4s infinite both;
}

#deepseek-chat-container .typing-dot:nth-child(1) {
    animation-delay: 0s;
}

#deepseek-chat-container .typing-dot:nth-child(2) {
    animation-delay: 0.2s;
}

#deepseek-chat-container .typing-dot:nth-child(3) {
    animation-delay: 0.4s;
    margin-right: 0;
}

@keyframes typingAnimation {
    0%, 60%, 100% { transform: translateY(0); }
    30% { transform: translateY(-4px); }
}
&lt;/style&gt;
&lt;div class=&#34;chat-container&#34; id=&#34;deepseek-chat-container&#34;&gt;
    &lt;div class=&#34;chat-box&#34; id=&#34;chat-box&#34;&gt;&lt;/div&gt;
    &lt;div class=&#34;input-area&#34;&gt;
        &lt;select class=&#34;model-selector&#34; id=&#34;model-selector&#34;&gt;
            &lt;option value=&#34;deepseek-ai/DeepSeek-V2.5&#34;&gt;DeepSeek-V2.5&lt;/option&gt;
            &lt;option value=&#34;deepseek-ai/DeepSeek-V3&#34;&gt;DeepSeek-V3&lt;/option&gt;
            &lt;option value=&#34;deepseek-ai/DeepSeek-R1&#34;&gt;DeepSeek-R1&lt;/option&gt;
        &lt;/select&gt;
        &lt;input type=&#34;text&#34; class=&#34;user-input&#34; id=&#34;user-input&#34; placeholder=&#34;输入消息...&#34; /&gt;
        &lt;button class=&#34;send-button&#34; id=&#34;send-button&#34;&gt;发送&lt;/button&gt;
    &lt;/div&gt;
&lt;/div&gt;
&lt;script&gt;
const apiKey = &#39;sk-hyqfvwdisyofoklsbjabpxzgtrcludkcjapwsdsnwhmloolo&#39;;
const apiUrl = &#39;https://api.siliconflow.cn/v1/chat/completions&#39;;

document.getElementById(&#39;user-input&#39;).addEventListener(&#39;keypress&#39;, (e) =&gt; {
    if (e.key === &#39;Enter&#39;) {
        sendMessage();
    }
});

document.getElementById(&#39;send-button&#39;).addEventListener(&#39;click&#39;, sendMessage);

async function sendMessage() {
    const userInput = document.getElementById(&#39;user-input&#39;).value.trim();
    if (!userInput) return;

    appendMessage(userInput, &#39;user&#39;);
    document.getElementById(&#39;user-input&#39;).value = &#39;&#39;;
    
    // 显示正在输入指示器
    const chatBox = document.getElementById(&#39;chat-box&#39;);
    const typingIndicator = createTypingIndicator();
    chatBox.appendChild(typingIndicator);
    chatBox.scrollTop = chatBox.scrollHeight;

    const selectedModel = document.getElementById(&#39;model-selector&#39;).value;
    
    try {
        const response = await fetch(apiUrl, {
            method: &#39;POST&#39;,
            headers: {
                &#39;Authorization&#39;: `Bearer ${apiKey}`,
                &#39;Content-Type&#39;: &#39;application/json&#39;
            },
            body: JSON.stringify({
                model: selectedModel,
                messages: [{ role: &#39;user&#39;, content: userInput }],
                stream: true,
                max_tokens: 1024,
                temperature: 0.7
            })
        });

        if (!response.ok) {
            throw new Error(`API请求失败: ${response.status}`);
        }

        // 创建消息容器
        const messageElement = document.createElement(&#39;div&#39;);
        messageElement.classList.add(&#39;message&#39;, &#39;assistant-message&#39;);
        chatBox.appendChild(messageElement);
        
        // 移除正在输入指示器
        typingIndicator.remove();

        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let assistantMessage = &#39;&#39;;
        
        while (true) {
            const { done, value } = await reader.read();
            if (done) break;

            const chunk = decoder.decode(value);
            const lines = chunk.split(&#39;\n&#39;).filter(line =&gt; line.trim() !== &#39;&#39;);
            
            for (const line of lines) {
                if (line.startsWith(&#39;data:&#39;) &amp;&amp; line !== &#39;data: [DONE]&#39;) {
                    try {
                        const data = JSON.parse(line.substring(5));
                        if (data.choices?.[0]?.delta?.content) {
                            assistantMessage += data.choices[0].delta.content;
                            messageElement.textContent = assistantMessage;
                            chatBox.scrollTop = chatBox.scrollHeight;
                        }
                    } catch (e) {
                        console.error(&#39;解析流数据失败:&#39;, e);
                    }
                }
            }
        }
    } catch (error) {
        typingIndicator.remove();
        appendMessage(`请求出错: ${error.message}`, &#39;assistant&#39;);
        console.error(&#39;API请求错误:&#39;, error);
    }
}

function appendMessage(message, sender) {
    const chatBox = document.getElementById(&#39;chat-box&#39;);
    const messageElement = document.createElement(&#39;div&#39;);
    messageElement.classList.add(&#39;message&#39;);
    messageElement.classList.add(sender === &#39;user&#39; ? &#39;user-message&#39; : &#39;assistant-message&#39;);
    messageElement.textContent = message;
    chatBox.appendChild(messageElement);
    chatBox.scrollTop = chatBox.scrollHeight;
}

function createTypingIndicator() {
    const indicator = document.createElement(&#39;div&#39;);
    indicator.className = &#39;typing-indicator&#39;;
    for (let i = 0; i &lt; 3; i++) {
        const dot = document.createElement(&#39;span&#39;);
        dot.className = &#39;typing-dot&#39;;
        indicator.appendChild(dot);
    }
    return indicator;
}
&lt;/script&gt;</description>
